#!/bin/bash

iconmaker=$(basename $0)
_TMP=$(PWD)/.tmp_iconmaker


function usage {
  cat <<EOM
Usage: ${iconmaker} [OPTION]...
  -h            Display help
  -i VALUE      Select image
  -t VALUE      Put text to annotate

EOM

  exit 
}



while getopts ":t:i:h" opt; do
  case "$opt" in
    t)
      t="$OPTARG"
      ;;
    i)
      i="$OPTARG"
      ;;

    '-h'|'--help'|* )
      usage
      ;;
  esac
done

echo -e "input seal type:"
ls -1 seal/* | xargs -I{} basename {} .png
read s 
rm -Rf ${_TMP}
mkdir -p ${_TMP}
cp -ip $i ${_TMP}
cp -ip seal/$s.png ${_TMP} 
docker run --rm -v ${_TMP}:/root/tmp-dir --env TAG=$t --env IMG=$i --env SLN=$s.png rhemsjapan/iconmaker:develop
mv -f ${_TMP}/`echo $i | cut -d '.' -f 1`-iconmaker.png ./
rm -Rf ${_TMP}